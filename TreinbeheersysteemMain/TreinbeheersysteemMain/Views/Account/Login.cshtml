@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model LoginViewModel
        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div class="parentContainer">
                    <div class="square">
                        <div class="center">
                            <div><h2>Login</h2></div>
                            <div class="textinput" id="inputlogin">
                                <div class="form-group">
                                    <label asp-for="Gebruikersnaam"></label>
                                    <input asp-for="Gebruikersnaam" class="form-control" />
                                    <span asp-validation-for="Gebruikersnaam" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Wachtwoord"></label>
                                    <input asp-for="Wachtwoord" class="form-control" />
                                    <span asp-validation-for="Wachtwoord" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="checkbox">
                                        <label asp-for="RememberMe">
                                            <input asp-for="RememberMe"/>
                                            @Html.DisplayNameFor(m => m.RememberMe)
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <p>
                                        <a asp-action="ForgotPassword">Wachtwoord vergeten?</a>
                                    </p>
                                    <button type="submit" style="top: 0px" class="btn btn-primary">Log in</button>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </form>
        </section>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

