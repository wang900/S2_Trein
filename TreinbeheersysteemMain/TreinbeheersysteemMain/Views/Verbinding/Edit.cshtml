@model TreinbeheersysteemMain.Models.VerbindingDetailViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TreinDetailViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Naam" class="control-label"></label>
                <input asp-for="Naam" class="form-control" value="@Model.Naam" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lengte" class="control-label"></label>
                <input asp-for="Lengte" class="form-control" value="@Model.Lengte" readonly />
                <span asp-validation-for="Lengte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeginPerronId" class="control-label"></label>
                <input asp-for="BeginPerronId" class="form-control" value="@Model.BeginPerronId" />
                <span asp-validation-for="BeginPerronId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EindPerronId" class="control-label"></label>
                <input asp-for="EindPerronId" class="form-control" value="@Model.EindPerronId" />
                <span asp-validation-for="EindPerronId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Actief" checked="@Model.Actief" /> @Html.DisplayNameFor(model => model.Actief)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

